<p id="notice"><%= notice %></p>
<div class="fullform">
<p>
  <strong>Title:</strong>
  <%= @bug.title %>
</p>

<p>
  <strong>User:</strong> 
  <%= @bug.user ? @bug.user.fname + " " + @bug.user.lname : "-"%>
</p>

<p>
  <strong>Description:</strong>
  <%= @bug.description %>
</p>

<p>
  <strong>Issue type:</strong>
  <%= @bug.issue_type %>
</p>

<p>
  <strong>Priority:</strong>
  <%= @bug.priority %>
</p>

<p>
  <strong>Status:</strong>
  <%= @bug.status %>
</p>
</div><br>
<%= link_to 'Edit', edit_bug_path(@bug) %> |
